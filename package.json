{
  "name": "v3-print-agent",
  "version": "1.0.8",
  "description": "V3 Inventory Print Agent - Auto-print labels and documents to configured printers",
  "main": "dist/main/index.js",
  "author": "V3 Inventory",
  "license": "MIT",
  "scripts": {
    "dev": "electron-forge start",
    "prebuild": "node -e \"const fs=require('fs');const path=require('path');const dir=path.join('dist','renderer');if(!fs.existsSync(dir))fs.mkdirSync(dir,{recursive:true});fs.copyFileSync('src/renderer/settings.html','dist/renderer/settings.html');console.log('HTML files copied to dist/renderer/')\"",
    "build": "tsc && npm run prebuild && electron-forge make",
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "pdf-to-printer": "^5.5.0"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.13",
    "electron": "^27.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "V3 Print Agent",
        "icon": "./assets/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "v3_print_agent",
            "setupIcon": "./assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        }
      ]
    }
  }
}
